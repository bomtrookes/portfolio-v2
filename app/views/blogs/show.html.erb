<div class="container">
  <h1><%= @blog.title %></h1>
  <%= link_to "Blog Posts", blogs_path %>
  <%= link_to "Edit Post", edit_blog_path(@blog) %>
  <hr>
  <%= raw @blog.content %>
  <div class="container">
    <h3>Read My Other Posts</h3>
    <ul>
      <% @blogs.each do |blog| %>
        <li><%= link_to blog.title, blog_path(blog) %></li>
      <% end %>
    </ul>
  </div>
</div>
<div class="container">
  <%= link_to "Delete", @blog, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</div>
