<div id="project-show">
  <main id="project-container" style="background:<%= @project.color_theme %>">
    <section id="project-title">
      <h1><%= @project.name %></h1>
      <p><%= @project.caption %></p>
    </section>

    <section id="project-description">
      <p><%= @project.content %></p>
    </section>

    <section id="project-skills">
      <h4>Built with...</h3>
      <ul>
        <% @project.skills.each do |skill| %>
          <li><%= skill %></li>
        <% end %>
      </ul>
    </section>

    <section id="projects-list">
      <h4>More Projects</h3>
      <ul>
        <% @projects.each do |project| %>
          <li><%= link_to project.name, project_path(project) %></li>
        <% end %>
      </ul>
    </section>



  </main>

  <aside class="d-flex flex-column">
    <% @project.images.each do |image| %>
      <%= cl_image_tag image.key %>
    <% end %>
  </aside>

</div>

<div class="links">
  <a href="<%= @project.github %>">GitHub</a>
  <a href="<%= @project.blog %>">Blog</a>
  <a href="<%= @project.url %>">Project Url</a>
</div>

<div class="container">
  <%= link_to "All Projects", projects_path %>
  <%= link_to "Edit", edit_project_path(@project) %>
  <%= link_to "Delete", @project, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</div>
